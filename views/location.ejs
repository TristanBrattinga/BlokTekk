<section>
    <noscript>
        <form action="/location" method="post">
            <label>
                Latitude:
                <input type="number" name="latitude" data-no-arrow-control="true" placeholder="±DD.DDDD" step=".0001" required/>
            </label>
            <label>
                Longitude:
                <input type="number" name="longitude" data-no-arrow-control="true" placeholder="±DD.DDDD" step=".0001" required/>
            </label>
            <button type="submit">Submit</button>
        </form>
    </noscript>
    <button id="getLocation" class="primary-btn">Retrieve Location</button>
    <h1>Your location:</h1>
    <div id="container">
        <noscript>
            <% if (cityData) { %>
                <% cityData.forEach(city => { %>
                    <h2>City: <%= city.name %></h2>
                    <h3>Country: <%= city.country %></h3>
                    <h4>State: <%= city.state %></h4>
                <% }) %>
            <% } else { %>
              <p>Geen stad kunnen vinden...</p>
            <% } %>
        </noscript>
    </div>
    <div id="loading"></div>
</section>
